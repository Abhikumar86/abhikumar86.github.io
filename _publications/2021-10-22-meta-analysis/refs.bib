journal = {Journal of Plant Ecology},
month = {jun},
number = {2},
pages = {85--93},
publisher = {Narnia},
title = {{Rates of litter decomposition in terrestrial ecosystems: global patterns and controlling factors}},
url = {www.jpe.oxfordjournals.org},
volume = {1},
year = {2008}
}
