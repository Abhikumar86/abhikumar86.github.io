doi = {10.1016/0167-8809(91)90122-E},
issn = {0167-8809},
journal = {Agriculture, Ecosystems & Environment},
month = {feb},
number = {1-4},
pages = {371--397},
publisher = {Elsevier},
title = {{Temporal and spatial heterogeneity of trophic interactions within below-ground food webs}},
volume = {34},
year = {1991}
}
